                                <TextBlock Text="{Binding Title}" 
                                          VerticalAlignment="Center"
                                          FontFamily="Consolas"
                                          FontSize="10"
                                          Foreground="#777777" />
                                <TextBlock Text="{Binding Subtitle}" 
                                          Margin="4,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="11"
                                          FontWeight="Normal" />
                            </StackPanel>

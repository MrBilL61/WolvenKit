                                                    <Setter Property="Text" Value="🤖" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="RenderFxManager">
                                                    <Setter Property="Text" Value="🎨" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="Switch">
                                                    <Setter Property="Text" Value="🔀" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="VisionModesManager">
                                                    <Setter Property="Text" Value="👁️" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="VoicesetManager">
                                                    <Setter Property="Text" Value="🗣️" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="MapPinManager">
                                                    <Setter Property="Text" Value="📍" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="ClearForcedBehaviours">
                                                    <Setter Property="Text" Value="🧽" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="ForcedBehaviour">
                                                    <Setter Property="Text" Value="🎭" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="PhoneManager">
                                                    <Setter Property="Text" Value="📱" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="SpawnManager">
                                                    <Setter Property="Text" Value="🐣" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="TransformAnimator">
                                                    <Setter Property="Text" Value="🔄" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="UIManager">
                                                    <Setter Property="Text" Value="💻" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="WorldDataManager">
                                                    <Setter Property="Text" Value="🌍" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="EquipItem">
                                                    <Setter Property="Text" Value="👕" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="SendAICommand">
                                                    <Setter Property="Text" Value="🤖" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="TeleportPuppet">
                                                    <Setter Property="Text" Value="🚀" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="VehicleNodeCommand">
                                                    <Setter Property="Text" Value="🚗" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="Combat">
                                                    <Setter Property="Text" Value="⚔️" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="MiscAICommand">
                                                    <Setter Property="Text" Value="🧩" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="MovePuppet">
                                                    <Setter Property="Text" Value="🚶" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="LogicalAnd">
                                                    <Setter Property="Text" Value="🔗" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="LogicalHub">
                                                    <Setter Property="Text" Value="🌐" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="LogicalXor">
                                                    <Setter Property="Text" Value="🚪" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Title}" Value="GameManager">
                                                    <Setter Property="Text" Value="🎮" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <!-- Default fallback -->
                                            <Setter Property="Text" Value="⚪" />
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock
                                    Margin="0"
                                    Text="{Binding Title}"
                                    FontWeight="Bold"
                                    FontSize="21"
                                    VerticalAlignment="Center" />

                            </StackPanel>
                        </Border>

                        <!-- Content section with subtle background -->
                        <Border Background="{Binding ContentBackground}" 
                                Padding="10,6,10,6"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch">
                            <ItemsControl ItemsSource="{Binding Details}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            MaxWidth="1000"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Margin="{DynamicResource WolvenKitMarginTinyRight}"
                                                Foreground="#999999"
                                                Text="{Binding Key}"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTip="{Binding Key}" />

                                            <TextBlock
                                                Text="{Binding Value}"
                                                TextAlignment="Right"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTip="{Binding Value}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                    </StackPanel>
                </DataTemplate>

                <local:NodeTemplateSelector x:Key="nodeTemplateSelector">
                    <local:NodeTemplateSelector.Default>
                        <DataTemplate />
                    </local:NodeTemplateSelector.Default>

                    <local:NodeTemplateSelector.SceneStartNode>
                        <DataTemplate DataType="{x:Type scene:scnStartNodeWrapper}">
                            <Grid>
                                <TextBox Text="{Binding Name}" />
                            </Grid>
                        </DataTemplate>
                    </local:NodeTemplateSelector.SceneStartNode>

                    <local:NodeTemplateSelector.SceneEndNode>
                        <DataTemplate DataType="{x:Type scene:scnEndNodeWrapper}">
                            <StackPanel Orientation="Vertical">
                                <TextBox Text="{Binding Name}" />

                                <ComboBox
                                    ItemsSource="{Binding Types}"
                                    SelectedItem="{Binding Type}" />
                            </StackPanel>
                        </DataTemplate>
                    </local:NodeTemplateSelector.SceneEndNode>
                </local:NodeTemplateSelector>

                <DataTemplate DataType="{x:Type nodes:NodeViewModel}">
                    <nodify:Node
                        Content="{Binding}"
                        ContentTemplateSelector="{DynamicResource nodeTemplateSelector}"
                        ContextMenuOpening="Node_ContextMenuOpening"
                        Header="{Binding}"
                        HeaderTemplate="{StaticResource DetailedHeaderTemplate}"
                        Input="{Binding Input}"
                        MouseDoubleClick="Node_OnMouseDoubleClick"
                        Output="{Binding Output}">
                        <nodify:Node.ContextMenu>
                            <ContextMenu />
                        </nodify:Node.ContextMenu>

                        <nodify:Node.Style>
                            <Style
                                BasedOn="{StaticResource {x:Type nodify:Node}}"
                                TargetType="{x:Type nodify:Node}">
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Details.Count}"
                                        Value="0">
                                        <Setter Property="Header" Value="{Binding Title}" />
                                        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource WolvenKitYellow}" />
                                        <Setter Property="BorderThickness" Value="2" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </nodify:Node.Style>

                        <nodify:Node.InputConnectorTemplate>
                            <DataTemplate DataType="{x:Type nodes:InputConnectorViewModel}">
                                <nodify:NodeInput
                                    Anchor="{Binding Anchor,
                                                     Mode=OneWayToSource}"
                                    IsConnected="{Binding IsConnected}"
                                    Margin="0,2,0,2"
                                    Background="Transparent">
                                    <nodify:NodeInput.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Title}" 
                                                      VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Subtitle}" 
                                                      Margin="4,0,0,0"
                                                      VerticalAlignment="Center"
                                                      FontSize="10"
                                                      Foreground="#777777"
                                                      FontFamily="Consolas" />
                                        </StackPanel>
                                    </nodify:NodeInput.Header>
                                </nodify:NodeInput>
                            </DataTemplate>
                        </nodify:Node.InputConnectorTemplate>

                        <nodify:Node.OutputConnectorTemplate>
                            <DataTemplate DataType="{x:Type nodes:OutputConnectorViewModel}">
                                <nodify:NodeOutput
                                    Anchor="{Binding Anchor,
                                                     Mode=OneWayToSource}"
                                    IsConnected="{Binding IsConnected}">
                                    <nodify:NodeOutput.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Title}" 
                                                      VerticalAlignment="Center"
                                                      FontSize="14"
                                                      FontWeight="Normal"
                                                      Foreground="{DynamicResource TextFillColorPrimary}" />
                                            <TextBlock Text="{Binding Subtitle}" 
                                                      Margin="4,0,0,0"
                                                      VerticalAlignment="Center"
                                                      FontFamily="Consolas"
                                                      FontSize="10"
                                                      Foreground="#777777" />
                                        </StackPanel>
                                    </nodify:NodeOutput.Header>
                                </nodify:NodeOutput>
                            </DataTemplate>
                        </nodify:Node.OutputConnectorTemplate>
                    </nodify:Node>
                </DataTemplate>
            </nodify:NodifyEditor.Resources>

            <nodify:NodifyEditor.ConnectionTemplate>
                <DataTemplate DataType="{x:Type nodes:ConnectionViewModel}">
                    <nodify:Connection
                        Source="{Binding Source.Anchor}"
                        SourceOffset="7,0"
                        SourceOffsetMode="Static"
                        Target="{Binding Target.Anchor}"
                        TargetOffset="7,0"
                        TargetOffsetMode="Static"
                        IsSelectable="True"
                        IsSelected="{Binding IsSelected}"
                        MouseRightButtonDown="Connection_OnRightClick">
                        <nodify:Connection.Style>
                            <Style TargetType="{x:Type nodify:BaseConnection}">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Stroke" Value="#FF7F7F7F" />
                                <Setter Property="StrokeThickness" Value="2.5" />

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Stroke" Value="{StaticResource WolvenKitYellow}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Stroke" Value="{StaticResource WolvenKitGreen}" />
                                    </Trigger>

                                    <!--
                                    <DataTrigger Binding="{Binding Source.Node.IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                        <Setter Property="Stroke" Value="{Binding Source.Color}" />
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Destination.Node.IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                        <Setter Property="Stroke" Value="{Binding Destination.Color}" />
                                    </DataTrigger>
                                    -->
                                </Style.Triggers>
                            </Style>
                        </nodify:Connection.Style>
                    </nodify:Connection>
                </DataTemplate>
            </nodify:NodifyEditor.ConnectionTemplate>

            <nodify:NodifyEditor.PendingConnectionTemplate>
                <DataTemplate DataType="{x:Type nodes:PendingConnectionViewModel}">
                    <nodify:PendingConnection
                        AllowOnlyConnectors="False"
                        CompletedCommand="{Binding ElementName=uc,
                                                   Path=Source.ConnectCommand}"
                        Source="{Binding Source,
                                         Mode=OneWayToSource}"
                        Target="{Binding Target,
                                         Mode=OneWayToSource}" />
                </DataTemplate>
            </nodify:NodifyEditor.PendingConnectionTemplate>

            <nodify:NodifyEditor.ItemContainerStyle>
                <Style
                    BasedOn="{StaticResource {x:Type nodify:ItemContainer}}"
                    TargetType="{x:Type nodify:ItemContainer}">
                    <Setter Property="ActualSize" Value="{Binding Size, Mode=OneWayToSource}" />
                    <Setter Property="Location" Value="{Binding Location}" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource WolvenKitYellow}" />
                            <Setter Property="BorderThickness" Value="2" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </nodify:NodifyEditor.ItemContainerStyle>

            <nodify:NodifyEditor.ContextMenu>
                <ContextMenu />
            </nodify:NodifyEditor.ContextMenu>
        </nodify:NodifyEditor>
    </Grid>
</UserControl>